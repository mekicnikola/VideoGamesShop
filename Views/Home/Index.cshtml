@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<Resource> localizer
<video id="backgroundVideo" muted="muted" preload="auto" loop="loop" autoplay="autoplay" src="/images/godOfWarTeaser.mp4"></video>

<div class="container px-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-6">
            <div class="text-center my-5">
                <h1 class="display-5 fw-bolder text-white mb-2">@localizer["HomeHeroNaslov"]</h1>
                <p class="lead text-white-50 mb-4">@localizer["HomeHeroOpis"]</p>
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a class="btn btn-primary btn-lg px-4 me-sm-3" asp-area="" asp-controller="Proizvod" asp-action="ProizvodViewKorisnik">@localizer["ShopNow"]</a>
                    &nbsp
                    <a class="btn btn-outline-light btn-lg px-4" asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["LearnMore"]</a>
                </div>
            </div>
        </div>
    </div>
</div>


