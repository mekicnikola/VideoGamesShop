@model ProjekatNapredniWeb.Models.Poruka
@{
    ViewData["Title"] = "Create";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<Resource> localizer

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ImePrezime" for="name" class="">@localizer["ImePrezime"]</label>
        <input type="text" asp-for="ImePrezime" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="">Email</label>
        <input type="text" value="@User.Identity.Name" asp-for="Email" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="PorukaSadrzaj" for="message">@localizer["Poruka"]</label>
        <textarea class="form-control" type="text" asp-for="PorukaSadrzaj" rows="2" required></textarea>
    </div>

    <div class="text-center text-md-left">
        <button type="submit" class="btn btn-primary">@localizer["Posalji"]</button>
    </div>
</form>



            

                            
                            
              
                           
                            
                        
              
                            
                       

               
           